# Project-specific embedding search configuration
# ==============================================
# This file can be named either .embedrc or placed at .embed/config.toml
# It will override global configuration settings for this project

# Project-specific chunking - smaller chunks for this codebase
chunk_size = 75

# Aggressive caching for this active project
embedding_cache_size = 15000
search_cache_size = 200

# Faster git polling for active development
git_poll_interval_secs = 3

# Include test files in this project since they contain important examples
include_test_files = true

# Show more results for this complex codebase
max_search_results = 25

# Debug level logging for development
log_level = "debug"